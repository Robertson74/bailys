lightGray = #cccccc
mediumGray = #adadad
darkGray = #777777
reallyGray = #555555
darkestGray = #222222
headingFont = adobe-caslon-pro
screen-sm-min = 768px
screen-md-min = 992px
screen-lg-min = 1200px

body
    background-color darkestGray
    color mediumGray

hr
  border-color darkGray

.list-group-item
	background-color darkestGray
	border-color mediumGray
//@font-face
    //font-family: Caslon
    //src: url(../fonts/acaslonpro-regular.otf)
a:hover
  text-decoration none

h1, h2, h3, h4, h5, h6
  color darkGray
  font-family headingFont
  font-variant small-caps

h1 small, h2 small, h3 small, h4 small, h5 small, h6 small
  color reallyGray

.thumbnail
  background-color darkestGray
  border none
  max-width 300px

.inParagraph
  border solid 1px darkGray
  margin 10px

.thumbnail img
  border solid 1px darkGray
  padding 0px

.row1
  background-color mediumGray

.row1 p
  color darkGray

.row2
  background-color darkGray

.caption p
  color mediumGray

.caption a h3
  color mediumGray

.captionJump
  font-family adobe-caslon-pro
  font-variant small-caps

#logo
    font-family: adobe-caslon-pro
    font-size: 2em

#myNav
    border-radius 0
    margin-bottom 0

#myJumbo
    border-radius 0
    margin-top -20px
    padding 0

.navbar-brand
    padding 20px 15px

.list-group-item
	background-color reallyGray

.text-xs-left
    text-align left
.text-xs-right
    text-align right
.text-xs-center
    text-align center
.text-xs-justify
    text-align justify



@media (min-width: screen-sm-min)
    .text-sm-left
      text-align left
    .text-sm-right
      text-align right
    .text-sm-center
      text-align center
    .text-sm-justify
      text-align justify

@media (min-width: screen-md-min)
    .text-md-left
      text-align left
    .text-md-right
      text-align right
    .text-md-center
      text-align center
    .text-md-justify
      text-align justify

@media (min-width: screen-lg-min)
    .text-lg-left
      text-align left
    .text-lg-right
      text-align right
    .text-lg-center
      text-align center
    .text-lg-justify
      text-align justify


